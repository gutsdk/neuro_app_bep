<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:neuro_app_bep"
        xmlns:oxy="http://oxyplot.org/wpf" x:Class="neuro_app_bep.MainWindow"
        mc:Ignorable="d"
        Title="Метод обратного распространения ошибок" Height="620" Width="800" FontFamily="GOST type AU">
    <Canvas>
        <Label Content="Попытка в нейросети #1?" FontSize="20" Height="30" Width="200" Canvas.Left="20" Canvas.Top="10"/>
        <Label Content="Выбранное изображение" FontSize="20" Height="30" Width="200" Canvas.Left="79" Canvas.Top="544"/>
        <Label Content="График сходимости" FontSize="20" Height="30" Width="150" Canvas.Left="540" Canvas.Top="544"/>
        <Label x:Name="ModelStatus" FontSize="20" Canvas.Left="20" Canvas.Top="56"/>
        <Label x:Name="AccuracyStatus" FontSize="20" Canvas.Left="20" Canvas.Top="105"/>
        <Image x:Name="PickedImage"  Height="300" Width="300" Canvas.Left="29" Canvas.Top="231"/>
        <oxy:PlotView x:Name="Chart" Width="300" Height="300" Canvas.Left="465" Canvas.Top="231"/>
        <Button x:Name="LoadModel" Content="Загрузить модель" Click="LoadModel_Click" Width="150" Height="30" FontSize="20" Canvas.Left="20" Canvas.Top="153" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="SaveModel" Content="Сохранить модель" Click="SaveModel_Click" Width="150" Height="30" FontSize="20" Canvas.Left="218" Canvas.Top="153" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="PickImage" Content="Выбрать изображение" Click="PickImage_Click" Width="180" Height="30" FontSize="20" Canvas.Left="415" Canvas.Top="153" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="Start" Content="Начать" Click="Start_Click" Width="150" Height="30" FontSize="20" Canvas.Left="630" Canvas.Top="153" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    </Canvas>
</Window>
